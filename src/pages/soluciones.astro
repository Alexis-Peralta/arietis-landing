<Layout>
  <Header />
  <main class="w-full h-full flex flex-col items-center justify-center">
    <section class="flex flex-col md:flex-row items-center m-8 md:m-16">
      <img
        src={fondo_home.src}
        alt="fondo"
        class="w-full md:w-1/2 object-cover brightness-50 rounded-none md:rounded-md shadow-lg"
      />
